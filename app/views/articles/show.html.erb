<p id="notice"><%= notice %></p>

<h3> <p class="text-center"><%= @article.title %></p></h3>

<p><%= @article.content %></p>

<% if current_user == @article.user %>
  <%= link_to 'Edit', edit_user_article_path(@user, @article) %> |
  <%= link_to 'Delete', [@user, @article], method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<% if @article.comments.size > 0 %>
  <h3>评论</h3>
  <% for comment in @article.comments %>
    <%= comment.name %>
    <p><%= comment.content %></p>
  <% end %>
<% end %>


<%= form_for([@article, Comment.new], html: {class: 'form-horizontal'}) do |f| %>
  <div class="field form-group">
    <div class="col-sm-5 form-group-sm">
      <%= f.text_area :content, rows: 5, placeholder: '说点什么...', class: 'form-control' %>
    </div>
  </div>
  <p><%= f.submit '发表', class: "btn btn-primary" %></p>
<% end %>
