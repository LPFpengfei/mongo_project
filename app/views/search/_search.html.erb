<%= form_for home_path, method: :get, html: { role: "search", class: "navbar-form navbar-left"} do %>

  <div class="form-group">
     <%= text_field_tag :search, params[:search], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Search", class: "btn btn-default" %>
  </div>
 <% end %>